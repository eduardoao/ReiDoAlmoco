@model IList<WebMvcDoAlmoco.Models.VotacaoViewModel.CandidatoViewModel>

@{
    ViewData["Title"] = "VisualizarCandidatos";
}

<div class="modal-content">
    <h2>Visualizar Candidatos</h2>

    <p>
        <a asp-action="Create">Create New</a>
    </p>

    @{
        var listacandidatos = (IList<WebMvcDoAlmoco.Models.VotacaoViewModel.CandidatoViewModel>)ViewData["ListaCandidatos"];
    }


    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    Nome do candidato
                </th>
                <th>
                    Email
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in listacandidatos)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Candidato.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Candidato.Email)
                </td>

                <td>
                    <img src="@Url.Content(@item.Candidato.Foto)"/>
                </td>


            </tr>
            }
        </tbody>
    </table>
</div>
